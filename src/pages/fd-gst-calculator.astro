---
import Layout from '../layouts/Layout.astro';
---

<Layout 
	title="FD & GST Calculator India" 
	description="Calculate Fixed Deposit (FD) maturity and GST tax amounts with our easy-to-use Indian market calculator. Free tool for tax and savings planning."
>
	<section class="py-12 bg-gradient-to-br from-indigo-50 via-white to-purple-50">
		<div class="container mx-auto px-4">
			<div class="text-center max-w-2xl mx-auto mb-12">
				<h1 class="text-4xl font-extrabold text-gray-900 mb-4 tracking-tight">FD & GST <span class="text-indigo-600">Calculator</span></h1>
				<p class="text-lg text-gray-600">Accurate calculations for your savings and tax obligations in the Indian market.</p>
			</div>

			<div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
				<!-- Tabs -->
				<div class="flex border-b border-gray-100">
					<button id="tab-fd" class="flex-1 py-4 text-center font-bold text-lg border-b-2 border-indigo-600 text-indigo-600 bg-indigo-50/30 transition-all">
						Fixed Deposit (FD)
					</button>
					<button id="tab-gst" class="flex-1 py-4 text-center font-bold text-lg border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:bg-gray-50 transition-all">
						GST Calculator
					</button>
				</div>

				<div class="p-8">
					<!-- FD Calculator -->
					<div id="panel-fd" class="space-y-8">
						<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
							<div class="space-y-6">
								<div>
									<label class="block text-sm font-semibold text-gray-700 mb-2">Total Investment (₹)</label>
									<input type="number" id="fd-principal" value="100000" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none" />
									<input type="range" min="1000" max="10000000" step="1000" value="100000" class="w-full mt-4 accent-indigo-600 cursor-pointer" oninput="document.getElementById('fd-principal').value = this.value; calculateFD()" />
								</div>
								<div>
									<label class="block text-sm font-semibold text-gray-700 mb-2">Interest Rate (p.a. %)</label>
									<input type="number" id="fd-rate" value="7.5" step="0.1" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none" />
									<input type="range" min="1" max="15" step="0.1" value="7.5" class="w-full mt-4 accent-indigo-600 cursor-pointer" oninput="document.getElementById('fd-rate').value = this.value; calculateFD()" />
								</div>
								<div>
									<label class="block text-sm font-semibold text-gray-700 mb-2">Tenure (Years)</label>
									<input type="number" id="fd-years" value="5" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none" />
									<input type="range" min="1" max="25" step="1" value="5" class="w-full mt-4 accent-indigo-600 cursor-pointer" oninput="document.getElementById('fd-years').value = this.value; calculateFD()" />
								</div>
							</div>

							<div class="bg-indigo-50 rounded-2xl p-8 flex flex-col justify-center space-y-6 border border-indigo-100">
								<div class="text-center">
									<p class="text-indigo-600 font-semibold mb-1">Maturity Amount</p>
									<h2 class="text-4xl font-bold text-gray-900" id="fd-total">₹ 1,44,995</h2>
								</div>
								<div class="grid grid-cols-2 gap-4 pt-6 border-t border-indigo-200">
									<div class="text-center">
										<p class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">Invested</p>
										<p class="text-lg font-bold text-gray-800" id="fd-invested">₹ 1,00,000</p>
									</div>
									<div class="text-center">
										<p class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">Est. Returns</p>
										<p class="text-lg font-bold text-green-600" id="fd-interest">₹ 44,995</p>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- GST Calculator -->
					<div id="panel-gst" class="hidden space-y-8">
						<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
							<div class="space-y-6">
								<div>
									<label class="block text-sm font-semibold text-gray-700 mb-2">Total Amount (₹)</label>
									<input type="number" id="gst-amount" value="10000" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none" />
								</div>
								<div>
									<label class="block text-sm font-semibold text-gray-700 mb-2">GST Tax Slab</label>
									<div class="grid grid-cols-4 gap-2">
										{[5, 12, 18, 28].map((slab) => (
											<button class={`slab-btn py-2 rounded-lg border font-bold transition-all ${slab === 18 ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-600 border-gray-200 hover:border-indigo-600'}`} data-slab={slab}>
												{slab}%
											</button>
										))}
									</div>
									<input type="hidden" id="gst-slab" value="18" />
								</div>
								<div class="flex gap-4">
									<button id="gst-exclusive" class="flex-1 py-3 rounded-xl border-2 border-indigo-600 bg-indigo-50 text-indigo-600 font-bold transition-all">GST Exclusive</button>
									<button id="gst-inclusive" class="flex-1 py-3 rounded-xl border-2 border-transparent bg-gray-100 text-gray-600 font-bold transition-all hover:bg-gray-200">GST Inclusive</button>
									<input type="hidden" id="gst-type" value="exclusive" />
								</div>
							</div>

							<div class="bg-purple-50 rounded-2xl p-8 flex flex-col justify-center space-y-6 border border-purple-100">
								<div class="text-center">
									<p class="text-purple-600 font-semibold mb-1" id="gst-result-label">Total Amount (Incl. GST)</p>
									<h2 class="text-4xl font-bold text-gray-900" id="gst-total">₹ 11,800</h2>
								</div>
								<div class="grid grid-cols-2 gap-4 pt-6 border-t border-purple-200">
									<div class="text-center">
										<p class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">Base Amount</p>
										<p class="text-lg font-bold text-gray-800" id="gst-base">₹ 10,000</p>
									</div>
									<div class="text-center">
										<p class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">GST Tax</p>
										<p class="text-lg font-bold text-indigo-600" id="gst-tax">₹ 1,800</p>
									</div>
								</div>
								<div class="grid grid-cols-2 gap-4 pt-4 text-xs font-medium text-gray-500 border-t border-purple-100">
									<div class="text-center">CGST: <span id="gst-cgst">₹ 900</span></div>
									<div class="text-center">SGST: <span id="gst-sgst">₹ 900</span></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- SEO CONTENT SECTION -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4 max-w-4xl">
			<article class="prose prose-indigo max-w-none">
				<h2 class="text-3xl font-bold text-gray-900 mb-6">How FD Interest is Calculated in India</h2>
				<p class="text-gray-600 leading-relaxed mb-6">
					Fixed Deposits (FDs) are one of the most popular investment vehicles in India due to their guaranteed returns and low-risk profile. When you open an FD with an Indian bank or financial institution, your interest calculation typically follows a <strong>quarterly compounding</strong> method. This means that every three months, the interest earned is added back to your principal amount, and for the next three months, you earn interest on this new, higher amount. This 'interest on interest' mechanism makes FD returns significantly better than simple interest over longer tenures.
				</p>
				<p class="text-gray-600 leading-relaxed mb-6">
					The formula used for compounding FD interest is <code>A = P(1 + r/n)^(nt)</code>, where 'A' is the maturity amount, 'P' is the principal, 'r' is the annual interest rate, 'n' is the number of times interest compounds per year (usually 4 for quarterly), and 't' is the time in years. In India, Senior Citizens usually receive a 0.50% higher interest rate than the general public. It's also important to note that interest earned on FDs is taxable under 'Income from Other Sources' as per your income tax slab, and banks deduct TDS (Tax Deducted at Source) at 10% if the interest income exceeds ₹40,000 in a financial year (₹50,000 for senior citizens).
				</p>

				<h2 class="text-3xl font-bold text-gray-900 mt-12 mb-6">Understanding GST Tax Slabs in India</h2>
				<p class="text-gray-600 leading-relaxed mb-6">
					The Goods and Services Tax (GST) is a comprehensive, multi-stage, destination-based tax that replaced various indirect taxes in India like VAT, Service Tax, and Excise Duty. Introduced on July 1, 2017, GST aims to create a single unified market. In India, GST is primarily divided into four major tax slabs: <strong>5%, 12%, 18%, and 28%</strong>. Each slab is designed for specific categories of goods and services:
				</p>
				
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
					<div class="p-4 bg-gray-50 rounded-lg border-l-4 border-green-500">
						<h4 class="font-bold mb-2 uppercase text-xs tracking-widest text-gray-500">5% Slab</h4>
						<p class="text-sm text-gray-600">Essential items like sugar, oil, spices, tea, and basic life-saving drugs.</p>
					</div>
					<div class="p-4 bg-gray-50 rounded-lg border-l-4 border-blue-500">
						<h4 class="font-bold mb-2 uppercase text-xs tracking-widest text-gray-500">12% Slab</h4>
						<p class="text-sm text-gray-600">Standard items including butter, cheese, ghee, fruit juices, and mobile phones.</p>
					</div>
					<div class="p-4 bg-gray-50 rounded-lg border-l-4 border-indigo-500">
						<h4 class="font-bold mb-2 uppercase text-xs tracking-widest text-gray-500">18% Slab</h4>
						<p class="text-sm text-gray-600">Most services, capital goods, personal care items, and processed foods.</p>
					</div>
					<div class="p-4 bg-gray-50 rounded-lg border-l-4 border-red-500">
						<h4 class="font-bold mb-2 uppercase text-xs tracking-widest text-gray-500">28% Slab</h4>
						<p class="text-sm text-gray-600">Luxury items and demerit goods like high-end cars, tobacco, and carbonated drinks.</p>
					</div>
				</div>

				<p class="text-gray-600 leading-relaxed mb-6">
					GST in India is dual-structured, meaning it consists of <strong>CGST (Central GST)</strong> and <strong>SGST (State GST)</strong> for intra-state transactions. For example, if an 18% GST rate is applicable, it is split equally into 9% CGST and 9% SGST. For inter-state transactions, a single <strong>IGST (Integrated GST)</strong> is levied by the Central Government. Businesses with an annual turnover exceeding ₹40 lakhs (for goods) or ₹20 lakhs (for services) are required to register for GST. Using our GST calculator, you can easily determine the tax component for both GST-inclusive and GST-exclusive prices, helping you maintain accurate records for tax filing and financial planning.
				</p>
				
				<h2 class="text-3xl font-bold text-gray-900 mt-12 mb-6">Why Use an Online FD & GST Calculator?</h2>
				<p class="text-gray-600 leading-relaxed mb-6">
					Using digital financial tools ensures precision in your financial planning. Manual calculations for compounded interest or inclusive GST can be prone to errors, leading to incorrect budget estimations or tax filings. An online calculator provides instant results, allowing you to compare different FD tenures or GST slabs effortlessly. Whether you are a small business owner calculating GST for an invoice or a long-term investor planning your retirement savings with Fixed Deposits, these tools are indispensable for modern financial management in India.
				</p>
			</article>
		</div>
	</section>

	<script is:inline>
		// Tab Switching Logic
		const tabFd = document.getElementById('tab-fd');
		const tabGst = document.getElementById('tab-gst');
		const panelFd = document.getElementById('panel-fd');
		const panelGst = document.getElementById('panel-gst');

		tabFd.addEventListener('click', () => {
			tabFd.classList.add('border-indigo-600', 'text-indigo-600', 'bg-indigo-50/30');
			tabFd.classList.remove('border-transparent', 'text-gray-500');
			tabGst.classList.remove('border-indigo-600', 'text-indigo-600', 'bg-indigo-50/30');
			tabGst.classList.add('border-transparent', 'text-gray-500');
			panelFd.classList.remove('hidden');
			panelGst.classList.add('hidden');
		});

		tabGst.addEventListener('click', () => {
			tabGst.classList.add('border-indigo-600', 'text-indigo-600', 'bg-indigo-50/30');
			tabGst.classList.remove('border-transparent', 'text-gray-500');
			tabFd.classList.remove('border-indigo-600', 'text-indigo-600', 'bg-indigo-50/30');
			tabFd.classList.add('border-transparent', 'text-gray-500');
			panelGst.classList.remove('hidden');
			panelFd.classList.add('hidden');
		});

		// Formatting helper
		const formatINR = (amount) => {
			return '₹ ' + Math.round(amount).toLocaleString('en-IN');
		};

		// FD Calculation Logic
		const calculateFD = () => {
			const P = parseFloat(document.getElementById('fd-principal').value) || 0;
			const r = parseFloat(document.getElementById('fd-rate').value) / 100;
			const t = parseFloat(document.getElementById('fd-years').value) || 0;
			const n = 4; // Quarterly compounding

			if (P <= 0 || r <= 0 || t <= 0) return;

			// Formula: A = P(1 + r/n)^(nt)
			const A = P * Math.pow((1 + r / n), (n * t));
			const interest = A - P;

			document.getElementById('fd-total').innerText = formatINR(A);
			document.getElementById('fd-invested').innerText = formatINR(P);
			document.getElementById('fd-interest').innerText = formatINR(interest);
		};

		// GST Calculation Logic
		const calculateGST = () => {
			const amount = parseFloat(document.getElementById('gst-amount').value) || 0;
			const slab = parseFloat(document.getElementById('gst-slab').value) || 0;
			const type = document.getElementById('gst-type').value;

			let baseAmount, gstTax, totalAmount;

			if (type === 'exclusive') {
				baseAmount = amount;
				gstTax = amount * (slab / 100);
				totalAmount = amount + gstTax;
				document.getElementById('gst-result-label').innerText = 'Total Amount (Incl. GST)';
			} else {
				totalAmount = amount;
				baseAmount = amount / (1 + (slab / 100));
				gstTax = amount - baseAmount;
				document.getElementById('gst-result-label').innerText = 'Base Amount (Excl. GST)';
			}

			document.getElementById('gst-total').innerText = formatINR(type === 'exclusive' ? totalAmount : baseAmount);
			document.getElementById('gst-base').innerText = formatINR(type === 'exclusive' ? baseAmount : totalAmount);
			document.getElementById('gst-tax').innerText = formatINR(gstTax);
			document.getElementById('gst-cgst').innerText = formatINR(gstTax / 2);
			document.getElementById('gst-sgst').innerText = formatINR(gstTax / 2);
		};

		// Event Listeners for inputs
		['fd-principal', 'fd-rate', 'fd-years'].forEach(id => {
			document.getElementById(id).addEventListener('input', calculateFD);
		});

		document.getElementById('gst-amount').addEventListener('input', calculateGST);

		// GST Slab buttons
		document.querySelectorAll('.slab-btn').forEach(btn => {
			btn.addEventListener('click', () => {
				document.querySelectorAll('.slab-btn').forEach(b => {
					b.classList.remove('bg-indigo-600', 'text-white', 'border-indigo-600');
					b.classList.add('bg-white', 'text-gray-600', 'border-gray-200');
				});
				btn.classList.add('bg-indigo-600', 'text-white', 'border-indigo-600');
				btn.classList.remove('bg-white', 'text-gray-600', 'border-gray-200');
				document.getElementById('gst-slab').value = btn.dataset.slab;
				calculateGST();
			});
		});

		// GST Type buttons
		const btnExcl = document.getElementById('gst-exclusive');
		const btnIncl = document.getElementById('gst-inclusive');

		btnExcl.addEventListener('click', () => {
			btnExcl.classList.add('border-indigo-600', 'bg-indigo-50', 'text-indigo-600');
			btnExcl.classList.remove('border-transparent', 'bg-gray-100', 'text-gray-600');
			btnIncl.classList.remove('border-indigo-600', 'bg-indigo-50', 'text-indigo-600');
			btnIncl.classList.add('border-transparent', 'bg-gray-100', 'text-gray-600');
			document.getElementById('gst-type').value = 'exclusive';
			calculateGST();
		});

		btnIncl.addEventListener('click', () => {
			btnIncl.classList.add('border-indigo-600', 'bg-indigo-50', 'text-indigo-600');
			btnIncl.classList.remove('border-transparent', 'bg-gray-100', 'text-gray-600');
			btnExcl.classList.remove('border-indigo-600', 'bg-indigo-50', 'text-indigo-600');
			btnExcl.classList.add('border-transparent', 'bg-gray-100', 'text-gray-600');
			document.getElementById('gst-type').value = 'inclusive';
			calculateGST();
		});

		// Initial Calc
		calculateFD();
		calculateGST();
	</script>
</Layout>

<style>
	input[type="range"] {
		-webkit-appearance: none;
		height: 6px;
		background: #e2e8f0;
		border-radius: 5px;
		background-image: linear-gradient(#4f46e5, #4f46e5);
		background-repeat: no-repeat;
	}
	
	/* Chrome, Safari, Opera, Edge */
	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
	-webkit-appearance: none;
	margin: 0;
	}

	/* Firefox */
	input[type=number] {
	-moz-appearance: textfield;
	}
</style>
