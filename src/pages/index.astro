---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Premium Finance Tools for India">
	<section class="py-20 bg-white overflow-hidden">
		<div class="container mx-auto px-4 relative">
			<div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-96 h-96 bg-indigo-100 rounded-full blur-3xl opacity-50"></div>
			<div class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-96 h-96 bg-purple-100 rounded-full blur-3xl opacity-50"></div>
			
			<div class="max-w-3xl mx-auto text-center relative z-10">
				<span class="inline-block py-1 px-3 rounded-full bg-indigo-50 text-indigo-600 text-xs font-bold uppercase tracking-widest mb-6">Master Your Money</span>
				<h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-8 leading-tight">Smart Financial Tools for <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600">Smart Indians.</span></h1>
				<p class="text-xl text-gray-600 mb-10 leading-relaxed">
					Calculate GST, FD returns, SIP growth, and Income Tax with precision. Built for the modern Indian economy.
				</p>
				<div class="flex flex-wrap justify-center gap-4">
					<a href={`${import.meta.env.BASE_URL}/finance/sip-calculator/`} class="px-8 py-4 bg-green-600 text-white rounded-2xl font-bold text-lg hover:bg-green-700 transition-all shadow-lg hover:shadow-green-200/50 hover:-translate-y-1">
						SIP Calculator
					</a>
					<a href={`${import.meta.env.BASE_URL}/finance/gst-calculator/`} class="px-8 py-4 bg-purple-600 text-white rounded-2xl font-bold text-lg hover:bg-purple-700 transition-all shadow-lg hover:shadow-purple-200/50 hover:-translate-y-1">
						GST Calculator
					</a>
				</div>
			</div>
		</div>
	</section>

	<section id="tools" class="py-24 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="text-center mb-16">
				<h2 class="text-3xl font-bold text-gray-900 mb-4">Our Popular Tools</h2>
				<p class="text-gray-500">Fast, accurate, and easy-to-use financial calculators.</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<!-- SIP Calculator Card -->
				<a href={`${import.meta.env.BASE_URL}/finance/sip-calculator/`} class="group bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:border-green-100 transition-all">
					<div class="w-14 h-14 bg-green-50 rounded-2xl flex items-center justify-center text-green-600 mb-6 group-hover:scale-110 transition-transform">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-green-600 transition-colors">SIP Calculator</h3>
					<p class="text-gray-500 text-sm mb-6">Estimate future wealth on your Mutual Fund investments with regular monthly contributions.</p>
					<span class="text-green-600 font-bold text-sm flex items-center gap-2">
						Plan Wealth
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
						</svg>
					</span>
				</a>

				<!-- GST Calculator Card -->
				<a href={`${import.meta.env.BASE_URL}/finance/gst-calculator/`} class="group bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:border-purple-100 transition-all">
					<div class="w-14 h-14 bg-purple-50 rounded-2xl flex items-center justify-center text-purple-600 mb-6 group-hover:scale-110 transition-transform">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-purple-600 transition-colors">GST Calculator</h3>
					<p class="text-gray-500 text-sm mb-6">Calculate GST tax components (5%, 12%, 18%, 28%) for Indian business transactions.</p>
					<span class="text-purple-600 font-bold text-sm flex items-center gap-2">
						Calculate Tax
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
						</svg>
					</span>
				</a>

				<!-- FD Calculator Card -->
				<a href={`${import.meta.env.BASE_URL}/finance/fd-calculator/`} class="group bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:border-indigo-100 transition-all">
					<div class="w-14 h-14 bg-indigo-50 rounded-2xl flex items-center justify-center text-indigo-600 mb-6 group-hover:scale-110 transition-transform">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-indigo-600 transition-colors">FD Calculator</h3>
					<p class="text-gray-500 text-sm mb-6">Calculate maturity amounts for Fixed Deposits with quarterly compounding for Indian banks.</p>
					<span class="text-indigo-600 font-bold text-sm flex items-center gap-2">
						Check Maturity
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
						</svg>
					</span>
				</a>
			</div>
		</div>
	</section>
</Layout>
