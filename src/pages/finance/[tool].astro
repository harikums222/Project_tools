---
import Layout from '../../layouts/Layout.astro';
import FDCalculator from '../../components/Finance/FDCalculator.astro';
import GSTCalculator from '../../components/Finance/GSTCalculator.astro';
import SIPCalculator from '../../components/Finance/SIPCalculator.astro';
import AdvancedSIPCalculator from '../../components/Finance/AdvancedSIPCalculator.astro';
import RDCalculator from '../../components/Finance/RDCalculator.astro';
import SWPCalculator from '../../components/Finance/SWPCalculator.astro';

export function getStaticPaths() {
  return [
    { params: { tool: 'fd-calculator' } },
    { params: { tool: 'gst-calculator' } },
    { params: { tool: 'sip-calculator' } },
    { params: { tool: 'advanced-sip-calculator' } },
    { params: { tool: 'rd-calculator' } },
    { params: { tool: 'swp-calculator' } },
  ];
}

const { tool } = Astro.params;

const tools = {
  'fd-calculator': {
    title: "Fixed Deposit (FD) Calculator India",
    description: "Calculate FD maturity amounts with quarterly compounding. Free calculator for Indian banks with interest breakdown and TDS information.",
    Component: FDCalculator
  },
  'gst-calculator': {
    title: "GST Calculator India - Calculate GST Tax Instantly",
    description: "Free GST Calculator for India. Calculate GST inclusive and exclusive amounts with tax slab breakdown (5%, 12%, 18%, 28%). Instant CGST & SGST calculation.",
    Component: GSTCalculator
  },
  'sip-calculator': {
    title: "SIP Calculator India - Mutual Fund Returns Estimator",
    description: "Calculate the future value of your Mutual Fund Systematic Investment Plan (SIP). Easy to use tool for Indian investors.",
    Component: SIPCalculator
  },
  'advanced-sip-calculator': {
    title: "Advanced SIP Calculator with Step-up & Inflation",
    description: "Professional SIP planner with yearly step-up increments, inflation adjustment, and LTCG tax calculation for long-term wealth planning.",
    Component: AdvancedSIPCalculator
  },
  'rd-calculator': {
    title: "Recurring Deposit (RD) Calculator India",
    description: "Calculate Recurring Deposit maturity amounts with quarterly compounding. Fast and accurate RD calculator for Indian banks.",
    Component: RDCalculator
  },
  'swp-calculator': {
    title: "SWP Calculator - Systematic Withdrawal Plan",
    description: "Calculate your monthly income from mutual fund investments. Plan your retirement withdrawals with our easy SWP tool.",
    Component: SWPCalculator
  }
};

const config = tools[tool as keyof typeof tools];

if (!config) {
  return Astro.redirect('/404');
}

const { title, description, Component } = config;
---

<Layout title={title} description={description}>
  <Component />
</Layout>
